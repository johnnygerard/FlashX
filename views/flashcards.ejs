<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FlashX | Flashcards</title>
</head>

<body>
  <%- include('/nav', { authenticated }) %>
  <h1>FlashX</h1>
  <h2>Flashcard collection "<%= fset.name %>"</h2>

  <label>Question
    <input required maxlength="256" id="question">
  </label>
  <label>Answer
    <input required maxlength="256" id="answer">
  </label>
  <button type="button" id="createFlashcard">Create a flashcard</button>
  <script type="module">
    const button = document.getElementById('createFlashcard');
    const question = document.getElementById('question');
    const answer = document.getElementById('answer');

    const addClickListener = onClick =>
      button.addEventListener('click', onClick, { once: true });

    const onClick = async event => {
      let reloading = false;

      try {
        if (!question.reportValidity() || !answer.reportValidity()) return;

        const response = await fetch('/api/flashcard', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            question: question.value,
            answer: answer.value,
            fset: +location.pathname.match(/\d+/)[0]
          })
        });

        if (response.status === 204) {
          reloading = true;
          location.reload();
        } else {
          console.error(await response.text());
          alert('Operation failed.');
        }
      } catch (err) {
        console.error(err);
        alert('Network error');
      } finally {
        if (!reloading) addClickListener(onClick);
      }
    };

    addClickListener(onClick);

    const onKeyUp = event => {
      if (event.key === 'Enter') button.click();
    };

    question.addEventListener('keyup', onKeyUp);
    answer.addEventListener('keyup', onKeyUp);
  </script>

  <% if (fset.flashcards.length) { %>
  <dl>
    <% for (const flashcard of fset.flashcards) { %>
    <dt><%= flashcard.question %></dt>
    <dd><%= flashcard.answer %></dd>
    <% } %>
  </dl>
  <% } %>
</body>

</html>
