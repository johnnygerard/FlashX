<%- include('/metadata', { title: 'Home' }) %>
<%- include('/formStyle') %>
<%- include('/password') %>
<style>
  form {
    position: fixed;
    top: 10em;
    left: 32em;
  }

  main>ul>li {
    margin-top: 0.4em;
  }

  main>ul>li::after {
    content: ' \2714';
    color: green;
  }

</style>

<%- include('/nav', { authenticated }) %>
<main>
  <hgroup>
    <%- include('/logo') %>
    <p>Memorize easily with flashcards!</p>
  </hgroup>

  <p>Once registered you will be able to:</p>

  <ul>
    <li>Write your own flashcards</li>
    <li>Organize them into collections</li>
    <li>Train your memory with active recall</li>
  </ul>

  <% if (!authenticated) { %>

  <form action="/logIn" method="post" class="form">
    <label for="username">Username</label>
    <input id="username" name="username" autocomplete="username" required
        autofocus>

    <label for="password">Password</label>
    <x-password>
      <input slot="input" id="password" type="password" name="password"
          autocomplete="current-password" required>
    </x-password>
    <% for (const { message } of flash) { %>
    <p class="message"><strong><%= message %></strong></p>
    <% } %>
    <button class="link">Log in</button>
    <p id="link">No account? <a href="register">Register</a></p>
  </form>

  <% } %>
</main>
<%- include('/footer') %>
