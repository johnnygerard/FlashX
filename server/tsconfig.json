{
  "compilerOptions": {
    "outDir": "dist/server",
    "target": "ES2022",
    "lib": [ "ES2022" ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [ "*.ts" ]
}
